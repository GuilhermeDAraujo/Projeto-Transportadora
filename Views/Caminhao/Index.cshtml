@model IEnumerable<Projeto_Transportadora.Models.Caminhao>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Caminhões Cadastrados</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Caminhões Cadastrados</h1>

        <table class="table table-hover table-bordered">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">Placa</th>
                    <th class="text-center">Ações</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Placa</td>
                        <td class="text-center">
                            <a asp-action="Update" asp-route-id="@item.id" class="btn btn-warning btn-sm me-2">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Caminhão</a>
            <a asp-action="Menu" asp-controller="Home" class="btn btn-success">Voltar</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
