@model Projeto_Transportadora.Models.Caminhao

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deletar Caminhão</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Deletar Caminhão</h1>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <form asp-action="Delete" onsubmit="return confirmExcluir();">

                    <div class="form-group mb-3">
                        <label asp-for="Placa" class="control-label"><strong>Placa</strong></label>
                        <input asp-for="Placa" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-4">
                        <input type="submit" value="Excluir" class="btn btn-danger w-100" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function confirmExcluir() {
            var nome = "@Model.Placa";

            var mensagem = `Tem certeza que deseja deletar o Caminhão: \n\nPlaca: ${nome}`;
            return confirm(mensagem);
        }
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>