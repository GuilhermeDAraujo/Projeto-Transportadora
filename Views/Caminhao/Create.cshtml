@model Projeto_Transportadora.Models.Caminhao

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Novo Caminhão</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Cadastrar Nova Caminhão</h1>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
                    <div class="form-group mb-3">
                        <label asp-for="Placa" class="form-label"><strong>Placa do Caminhão</strong></label>
                        <span asp-validation-for="Placa" class="text-danger"></span>
                        <input asp-for="Placa" class="form-control" placeholder="Digite a Placa" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary w-100" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-success w-100 mt-3">Voltar</a>
            </div>
        </div>
    </div>

</body>

</html>
<br/>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "Corrija os seguintes erros: ")
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}